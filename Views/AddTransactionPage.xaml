<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PersonalFinanceTracker.ViewModels"
             x:Class="PersonalFinanceTracker.Views.AddTransactionPage"
             x:DataType="vm:AddTransactionViewModel"
             Title="Add Transaction">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
          ColumnDefinitions="*,*"
          Padding="10"
          RowSpacing="10"
          ColumnSpacing="5">
        <Label Grid.Row="0" Grid.ColumnSpan="2" 
               Text="Amount" 
               FontAttributes="Bold" 
               FontSize="18" />
        <Entry Grid.Row="1" Grid.ColumnSpan="2" 
               Text="{Binding SelectedTransaction.Amount, Mode=TwoWay}" 
               Keyboard="Numeric" 
               Placeholder="Enter amount" />
        <Label Grid.Row="2" Grid.ColumnSpan="2" 
               Text="Category" 
               FontAttributes="Bold" 
               FontSize="18" />
        <Picker Grid.Row="3" Grid.ColumnSpan="2" 
                ItemsSource="{Binding Categories}" 
                SelectedItem="{Binding SelectedTransaction.Category, Mode=TwoWay}" 
                Title="Select category" />
        <Label Grid.Row="4" Grid.ColumnSpan="2" 
               Text="Date" 
               FontAttributes="Bold" 
               FontSize="18" />
        <DatePicker Grid.Row="5" Grid.ColumnSpan="2" 
                    Date="{Binding SelectedTransaction.Date, Mode=TwoWay}" />
        <Label Grid.Row="6" Grid.ColumnSpan="2" 
               Text="Transaction Type" 
               FontAttributes="Bold" 
               FontSize="18" />
        <HorizontalStackLayout Grid.Row="7" Grid.ColumnSpan="2" 
                              Spacing="10">
            <Label Text="Expense" 
                   VerticalOptions="Center" />
            <Switch IsToggled="{Binding SelectedTransaction.IsIncome, Mode=TwoWay}" 
                    OnColor="Green" 
                    ThumbColor="White" 
                    VerticalOptions="Center" />
            <Label Text="Income" 
                   VerticalOptions="Center" />
        </HorizontalStackLayout>
        <Button Grid.Row="8" 
                Text="Save" 
                Command="{Binding SaveCommand}" />
        <Button Grid.Row="8" Grid.Column="1" 
                Text="Cancel" 
                Command="{Binding CancelCommand}" />
    </Grid>
</ContentPage>